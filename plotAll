# ============Triangulation==========  
set cbrange [4:8] # <4 Adjazenten bekommen gleiche Farbe wie =4.
set palette rgbformulae 33,13,10 
set cbtics 1 # Farbskala Schritte.
set title "Full triangulation with number of adjacencies" font "Verdana, 40"
set output d.f."_triangulation.png"
plot s.f."_triangulation.dat" using 1:2 with linespoints notitle ls 1 lc rgb "grey", "" using 1:2:3 with points notitle pt 7 ps 2 lc palette


# ============Einstellungen für Energien-plots==========
# Parameter für folgende zwei Plots. Andere Farben und ev. Größe,
# da beide abhängig von der "region of interest" sind.
set size square
set size ratio -1
set xrange[-4.8:4.8] # Das garantiert gleiche Größe zwischen verschiedenen plots. 
set yrange[-4.8:4.8] # Vereinfacht vergleiche.
unset cbrange
set cbtics auto
#set palette rgbformulae 7,5,15 # Alternative Farb-palette (black-blue-red-yellow).
set loadpath "/home/andreasb/Projekte/Gnuplot/"
load 'moreland.pal' # Schöne Farben.
unset loadpath


# ============Energie shifted==========
set title "E(shift)-E(regular) divided by shift length" font "Verdana, 40"
set output d.f."_dEshift.png"
plot s.f."_dEshift.dat" using 1:2:3:4:5 with vectors notitle filled lw 3 lc palette


# ============Energie-Differenz Nachbarn==========
unset cbrange
set cbtics auto
set title "E(adjacent)-E(point) divided by distance" font "Verdana, 40"
set output d.f."_dEadjacent.png"
plot s.f."_dEadjacent.dat" using 1:2:3:4:5 with vectors notitle filled lw 3 lc palette

