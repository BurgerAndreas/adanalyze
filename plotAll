
# ============Allgemeine Einstellungen==========
set term png enhanced size 2000, 1800 font "Verdana, 20"
set key outside
set style line 11 lc rgb '#808080' lt 1
set size square
set size ratio -1
set xrange[-4.8:4.8] # Das garantiert gleiche Größe zwischen verschiedenen plots. 
set yrange[-4.8:4.8] # Vereinfacht Vergleiche.
set xlabel "x / {/Symbol l}m" font "Verdana, 30"
set ylabel "y / {/Symbol l}m" font "Verdana, 30"

# ============Speicherorte==========
#Welche files sollen geplottet werden?
f="zwischenf_300"

#Wo sind die files gespeichert?
s="Output/"

#Wo sollen die plots hin?
d="Output/Plots/"


